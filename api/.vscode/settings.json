{
	"files.exclude": {
		"node_modules/": true,
		"dist": true
	},
	"eslint.validate": ["javascript", "typescript"],
	"[javascript]": {
		"editor.codeActionsOnSave": {
			"source.fixAll.eslint": true
		}
	},
	"editor.formatOnSave": true,
	"[typescript]": {
		"editor.formatOnSave": true,
		"editor.codeActionsOnSave": {
			"source.fixAll.eslint": true
		}
	}
}
