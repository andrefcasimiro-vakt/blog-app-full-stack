{
	"files.exclude": {
		"node_modules/": true,
		"dist": true
	},
	"eslint.validate": [
		"javascript",
		"typescript"
	],
	"editor.formatOnSave": true,
	"[javascript]": {
		"editor.formatOnSave": true,
		"editor.codeActionsOnSave": {
			"source.fixAll.eslint": true
		},
	},
	"[typescript]": {
		"editor.formatOnSave": true,
		"editor.codeActionsOnSave": {
			"source.fixAll.eslint": true
		}
	},
}